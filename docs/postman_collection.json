    {
      "name": "Create Transaction",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.sendRequest(\r",
              "  {\r",
              "    url: `${pm.environment.get('WOMPI_ENVIRONMENT')}/tokens/cards`,\r",
              "    method: 'POST',\r",
              "    header: {\r",
              "      'Content-Type': 'application/json',\r",
              "      Authorization: `Bearer ${pm.environment.get('WOMPI_PUBLIC_KEY')}`,\r",
              "    },\r",
              "    body: {\r",
              "      mode: 'raw',\r",
              "      raw: JSON.stringify({\r",
              "        number: pm.environment.get('CARD_NUMBER'),\r",
              "        cvc: pm.environment.get('CARD_CVC'),\r",
              "        exp_month: pm.environment.get('CARD_EXP_MONTH'),\r",
              "        exp_year: pm.environment.get('CARD_EXP_YEAR'),\r",
              "        card_holder: pm.environment.get('CARD_HOLDER')\r",
              "      }),\r",
              "    },\r",
              "  },\r",
              "  function (err, res) {\r",
              "    if (err) {\r",
              "      console.log(err);\r",
              "      return;\r",
              "    }\r",
              "\r",
              "    const json = res.json();\r",
              "    console.log(json)\r",
              "    pm.environment.set('cardToken', json.data.id);\r",
              "  }\r",
              ");\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
